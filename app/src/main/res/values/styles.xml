<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <!-- Immediate parent theme to specify base values for custom attributes -->
    <style name="Theme" parent="AppTheme">
        <!-- Only needed for pre-L -->
        <item name="android:editTextStyle">@style/Widget.Satelinx.EditText</item>
    </style>

    <style name="Widget.Satelinx.EditText" parent="Widget.AppCompat.EditText">
    </style>

    <style name="Theme.Satelinx.Base" parent="Theme">
        <item name="actionBarIconColor">#fff</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_2</item>

        <item name="android:textColorLink">@color/theme_accent_2</item>
    </style>

    <style name="Theme.Satelinx.NoActionBar" parent="Theme.Satelinx.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Satelinx.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:dropDownSelector">?popupItemBackground</item>
    </style>

    <style name="Widget.Satelinx.ListView.DropDown" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">?popupItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="Widget.Satelinx.SearchView" parent="Widget.AppCompat.SearchView" />

    <style name="ActionBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/theme_primary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewDark" parent="TextViewStyle">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="TextViewLight" parent="TextViewStyle">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
